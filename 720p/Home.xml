<window id="0">
	<onload>Dialog.Close(pvrguideinfo)</onload>
	<onload>Dialog.Close(movieinformation)</onload>
	<onload>Dialog.Close(musicinformation)</onload>
    <onload condition="Skin.HasSetting(EnableWidgets) + System.HasAddon(script.games.rom.collection.browser)">RunScript(script.games.rom.collection.browser,limit=10)</onload>
	<onload>Skin.Reset(SideBarVisible)</onload>



	<defaultcontrol always="true">9900</defaultcontrol>
<!--        <onload condition="System.HasAddon(script.tv.show.next.aired)">RunScript(script.tv.show.next.aired,backend=True)</onload>-->
	<allowoverlay>no</allowoverlay>	
	<controls>
		<control type="multiimage">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<imagepath background="true">$INFO[Container(9900).ListItem.Icon]</imagepath>
			<timeperimage>8000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
			<visible>!Skin.HasSetting(homepageSingleBackground) + !Skin.HasSetting(SingleBackground)</visible>
		</control>
		<include condition="Skin.HasSetting(homepageSingleBackground) | Skin.HasSetting(SingleBackground)">SingleBackground</include>
		<include>CommonMediaPlayingBackground</include>
		<include>BottomBlade</include>
		<control type="image"> <!-- Weather background -->
			<left>0</left>
			<top>-40</top>
			<width>1280</width>
			<height>120</height>
			<texture flipy="true" border="1">HomeNowPlayingBack.png</texture>
			<include>VisibleFadeEffect</include>
			<visible>Skin.HasSetting(homepageWeatherinfo) + !Skin.HasSetting(TouchMode)</visible>
		</control>
        <include>Clock</include>
		<include condition="!Skin.HasSetting(TouchMode)">HorizontalHome</include>
		<include condition="Skin.HasSetting(TouchMode)">VerticalHome</include>

		<control type="group"> <!-- Weather Info -->
			<left>20</left>
			<top>0</top>
			<visible>Skin.HasSetting(homepageWeatherinfo) + [!IsEmpty(Weather.Plugin) + Weather.IsFetched]</visible>
			<include>VisibleFadeEffect</include>
			<animation effect="slide" start="0,0" end="-20,570" condition="Skin.HasSetting(TouchMode)">Conditional</animation>
			<control type="image">
				<description>Weather image</description>
				<left>0</left>
				<top>0</top>
				<width>60</width>
				<height>60</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[Weather.Conditions]</texture>
			</control>
			<control type="button">
				<description>Goto Weather button</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>180</width>
				<height>80</height>
				<texturenofocus>-</texturenofocus>
				<texturefocus>-</texturefocus>
				<onclick>ActivateWindow(Weather)</onclick>
			</control>
			<control type="label">
				<description>Location label</description>
				<left>65</left>
				<top>5</top>
				<width>120</width>
				<height>15</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font10</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[Window(Weather).Property(Location)]</label>
				<visible>Skin.HasSetting(TouchMode)</visible>
			</control>
			<control type="label">
				<description>Location label</description>
				<left>65</left>
				<top>5</top>
				<width>300</width>
				<height>15</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font10</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[Window(Weather).Property(Location)]</label>
				<visible>!Skin.HasSetting(TouchMode)</visible>
			</control>
			<control type="grouplist">
				<left>65</left>
				<top>20</top>
				<width>300</width>
				<height>30</height>
				<orientation>horizontal</orientation>
				<align>left</align>
				<itemgap>0</itemgap>
				<control type="label">
					<description>Temp label</description>
					<width min="0" max="300">auto</width>
					<height>30</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font28_title</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>[B]$INFO[Window(Weather).Property(Current.Temperature)][/B]</label>
				</control>
				<control type="label">
					<description>Temp Units</description>
					<width min="0" max="100">auto</width>
					<height>22</height>
					<font>font10</font>
					<aligny>center</aligny>
					<label>$INFO[System.TemperatureUnits]</label>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>!IsEmpty(Window(Weather).Property(Current.Temperature))</visible>
				</control>
				<control type="label">
					<description>Conditions Label</description>
					<width>300</width>
					<height>22</height>
					<font>font10</font>
					<aligny>center</aligny>
					<label>$INFO[Window(Weather).Property(Current.Condition),  ]</label>
					<textcolor>grey2</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>!Skin.HasSetting(TouchMode)</visible>
				</control>
			</control>
			<control type="label">
				<description>Conditions Label</description>
				<left>0</left>
				<top>50</top>
				<width>180</width>
				<height>22</height>
				<font>font10</font>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<label>$INFO[Window(Weather).Property(Current.Condition),  ]</label>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
				<visible>Skin.HasSetting(TouchMode)</visible>
			</control>
		</control>
	</controls>	
</window>

	<include name="ContentPanelBackgrounds">
		<control type="group">
			<control type="image">
				<posx>50</posx>
				<posy>60</posy>
				<width>1180</width>
				<height>590</height>
				<texture border="15">ContentPanel.png</texture>
		        <colordiffuse>EEFFFFFF</colordiffuse>
				<include>dialogeffect</include>
				<visible>!Skin.HasSetting(NoContentBackgrounds)</visible>
			</control>
			<control type="image">
				<posx>-100</posx>
				<posy>-100</posy>
				<width>1480</width>
				<height>920</height>
				<texture>ContentPanel.png</texture>
		        <colordiffuse>CCFFFFFF</colordiffuse>
				<include>dialogeffect</include>
				<visible>Skin.HasSetting(NoContentBackgrounds)</visible>
			</control>
			<!-- Hidden button to prevent fullscreen video -->
			<control type="button">
				<right>50</right>
				<posy>60</posy>
				<width>1180</width>
				<height>590</height>
				<texturefocus>-</texturefocus>
				<visible>!Skin.HasSetting(NoContentBackgrounds)</visible>
			</control>
			<control type="button">
				<right>0</right>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<texturefocus>-</texturefocus>
				<visible>Skin.HasSetting(NoContentBackgrounds)</visible>
			</control>
		</control>
		<include>BottomBlade</include>
	</include>

	<include name="ContentPanelBackgroundsSettings">
		<control type="group">
			<control type="image">
				<posx>95</posx>
				<posy>55</posy>
				<width>1090</width>
				<height>595</height>
				<texture border="15">ContentPanel.png</texture>
		                <colordiffuse>EEFFFFFF</colordiffuse>
				<visible>!Skin.HasSetting(NoContentBackgrounds)</visible>
			</control>
			<!-- Hidden button to prevent fullscreen video -->
			<control type="button">
				<right>95</right>
				<posy>55</posy>
				<width>1090</width>
				<height>595</height>
				<visible>!Skin.HasSetting(NoContentBackgrounds)</visible>
				<texturefocus>-</texturefocus>
			</control>
			<control type="image">
				<posx>-100</posx>
				<posy>-100</posy>
				<width>1480</width>
				<height>920</height>
				<texture>ContentPanel.png</texture>
		        <colordiffuse>CCFFFFFF</colordiffuse>
				<include>dialogeffect</include>
